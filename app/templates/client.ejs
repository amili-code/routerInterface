    async function createBlockClient(filter = "all", searchQuery = "") {
    const clients = await apiRequest("/client");
    const blockClients = await apiRequest("/block-clients");

    document.getElementById("clientBlocker").innerHTML = ""; // پاک کردن لیست قبلی

    clients.forEach(client => {
        console.log(client);
        console.log(blockClients);
        const isBlocked = blockClients.some(blocked => blocked.clientId === client.id);
        // اعمال فیلتر
        if (filter === "blocked" && !isBlocked) return;
        if (filter === "active" && isBlocked) return;

        // اعمال جستجو
        if (searchQuery && !client.name.includes(searchQuery)) return;

        const buttonStyles = isBlocked
            ? 'background: #ccc; cursor: not-allowed; opacity: 0.6;'
            : 'background: linear-gradient(to bottom, #4a90e2, #357abd); cursor: pointer;';
        
        const buttonDisabled = isBlocked ? 'disabled' : '';

        document.getElementById("clientBlocker").innerHTML += `
            <div class="col-lg-3 col-sm-6 mb-lg-0 mb-4" style="margin-top:.5rem">
                <div class="card">
                    <div class="card-header d-flex justify-content-between p-3 pt-2">
                        <button onclick="clientBlocker('${client.id}', '${client.name}')" 
                            class="btn icon icon-md icon-shape shadow-dark text-center border-radius-lg"
                            style="${buttonStyles}"
                            ${buttonDisabled}>
                            <i class="material-symbols-rounded opacity-10">weekend</i>
                        </button>
                        <div class="text-start pt-1">
                            <p class="text-sm mb-0 text-capitalize">مسدود بکنید</p>
                            <h6 class="mb-0">کاربر: ${client.name}</h6>
                        </div>
                    </div>
                </div>
            </div>
        `;
    });


    document.getElementById("clientBlocker").innerHTML += `<a class="btn btn-outline-dark mt-4 w-100 m-2" type="button" href="#block-client">نمایش تمام مسدودیت ها</a>`; // پاک کردن لیست قبلی
}

