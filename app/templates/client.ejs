    async function clientBlocker(id , name){
    // بررسی اینکه آیا مودال از قبل وجود دارد یا نه
    if (document.getElementById("clientBlockModal")) {
        document.getElementById("clientBlockModal").remove();
    }

    // ایجاد HTML مودال
    const modalHTML = `
        <div id="clientBlockModal" style="
            display: flex;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;">
            
            <div card="card" style="
                background: white;
                padding: 20px;
                border-radius: 10px;
                width: 350px;
                text-align: center;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
                
                <div style="font-size: 18px; font-weight: bold; margin-bottom: 10px;">مسدود کردن کاربر</div>
                <p><strong>نام کاربر:</strong> <span id="clientName" data-id="${id}">${"کاربر " + name}</span></p>
                
                <textarea id="blockReason" style="
                    width: 100%;
                    padding: 8px;
                    margin-top: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;"
                    placeholder="دلیل مسدودیت را وارد کنید"></textarea>
                
                <div style="display: flex; justify-content: space-between; margin-top: 15px;">
                    <button id="submitBlock" class="btn bg-gradient-dark mt-4 w-100 m-1">
                        ثبت
                    </button>
                    <button id="closeModal" class="btn btn-outline-dark mt-4 w-100 m-1">
                        لغو
                    </button>
                </div>
            </div>
        </div>
    `;

    // اضافه کردن مودال به صفحه
    document.body.insertAdjacentHTML("beforeend", modalHTML);

    // عملکرد بستن مودال
    document.getElementById("closeModal").addEventListener("click", function () {
        document.getElementById("clientBlockModal").remove();
    });

    // عملکرد ثبت اطلاعات
    document.getElementById("submitBlock").addEventListener("click",async function () {
        const reason = document.getElementById("blockReason").value;
        const clientName = document.getElementById("clientName").getAttribute("data-id");

        if (!reason.trim()) {
            alert("لطفاً دلیل مسدودیت را وارد کنید.");
            return;
        }

        const response = await apiRequest("/block-client" , "POST" , { clientId: clientName, reason: reason })
        // ارسال اطلاعات به سرور
        if (response) {
            Swal.fire({
                title: "کاربر مسدود شد!",
                text: `کاربر با موفقیت مسدود شد.`,
                icon: "success",
                confirmButtonText: "متوجه شدم",
                confirmButtonColor:'#43A047',
                timer: 3000,
                timerProgressBar: true,
                showClass: {
                    popup: "animate__animated animate__fadeInDown"
                },
                hideClass: {
                    popup: "animate__animated animate__fadeOutUp"
                }
            });
            document.getElementById("clientBlockModal").remove();
            createTable("جدول پروفایل ها" , "block-client" , "table-block-client")    
            createBlockClient() 

        } else{
            Swal.fire({
                    title: "خطا!",
                    text: "افزودن کاربر به کاربران مسدود با مشکل مواجه شد.",
                    icon: "error",
                    confirmButtonText: "متوجه شدم",
                    confirmButtonColor: "#d33"
                });
        document.getElementById("clientBlockModal").remove();

        }
    });
}

    
